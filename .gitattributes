# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for text files
*.md text eol=lf
*.mdx text eol=lf
*.js text eol=lf
*.mjs text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.txt text eol=lf
*.py text eol=lf
*.java text eol=lf
*.kt text eol=lf
*.gradle text eol=lf
*.properties text eol=lf

